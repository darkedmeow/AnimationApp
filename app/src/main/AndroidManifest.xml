<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smallgroup.animationapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnimationApp">
        <activity
            android:name=".ui.app.video.VideoPlayerActivity"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".ui.app.drawing.DrawingActivity"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".ui.app.creating.ProjectCreationActivity"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".ui.auth.SplashActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.app.menu.MenuActivity"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".ui.auth.AuthActivity"
            android:screenOrientation="landscape">

        </activity>
    </application>

</manifest>